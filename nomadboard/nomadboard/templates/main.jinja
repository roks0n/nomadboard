<head>
    <meta charset="utf-8">

    <title>{% block page_title %}Nomadboard{% endblock %}</title>

    <meta name="description" content="{% block meta_description %}Job board for digital nomads{% endblock %}">
    <meta name="author" content="{% block meta_author %}{% endblock %}">

    <meta name="viewport" content="width=device-width">

    <link href="{{ static('css/main.css') }}" rel="stylesheet">
</head>
<body>

    {% include 'modules/header.jinja' %}

    <div class="jobs">
        <h2 class="jobs__search_title">
            Remote
            {% if tag_slug %}
                <span class="jobs__search_title--term">{{ tag_slug }}</span>
            {% endif %}
            jobs
        </h2>

        {% for job in jobs %}

            {% if job.date_published|date('d') == "15" %}
                <strong>WOOOP!</strong>
            {% endif %}

            {% include 'modules/job-card.jinja' %}
        {% endfor %}

    </div>

    {% with pagination=jobs %}
            {% include 'modules/paginator.jinja' %}
    {% endwith %}

</body>
</html>
